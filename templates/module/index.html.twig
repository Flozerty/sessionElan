{% extends 'base.html.twig' %}

{% block title %}Liste des modules{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{asset('css/list.css')}}">
{% endblock %}

{% block body %}

<h1>Liste des modules</h1>

<button class="addButton">
  <i class="fa-solid fa-circle-plus"></i> Cr√©er un module
</button>

<div id="components-container">
  {% for module in modules %}

  <div class="component">
    <span class="name">
      {{module.nomModule}}
    </span>

    <span class="delete-link">
      <a href="{{ path('delete_module', {'id': module.id}) }}">supprimer</a>
    </span>
  </div>

  {% endfor %}
</div>

<dialog id="moduleDialog">

  {{ form_start(formAddModule) }}
  {{ form_row(formAddModule.nom_module) }}
  <div>
    <button type="button" id="cancel">Annuler</button>
    <button type="submit">Confirmer</button>
  </div>
  {{ form_end(formAddModule) }}

</dialog>

{% endblock %}

{% block javascriptsBottom %}
<script src="{{asset('js/modal.js')}}"></script>
{% endblock %}