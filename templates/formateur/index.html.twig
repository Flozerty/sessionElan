{% extends 'base.html.twig' %}

{% block title %}Liste des formateurs{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{asset('css/list.css')}}">
{% endblock %}

{% block body %}

<h1>Liste des formateurs</h1>

<button class="addButton">
  <i class="fa-solid fa-circle-plus"></i> Cr√©er un formateur
</button>

<div id="components-container">
  {% for formateur in formateurs %}

  <div class="component">
    <span class="name">
      {{formateur.nom}} {{formateur.prenom}}
    </span>
    <span class="link">
      <a href="{{ path('show_formateur', {'id': formateur.id}) }}"><i class="fa-solid fa-link"></i> voir les infos</a>
    </span>
    <span class="delete-link">
      <a href="#">supprimer</a>
    </span>
  </div>

  {% endfor %}
</div>

<dialog id="formateurDialog">

  {{ form_start(formAddFormateur) }}
  {{ form_row(formAddFormateur.nom) }}
  {{ form_row(formAddFormateur.prenom) }}
  <div>
    <button type="button" id="cancel">Annuler</button>
    <button type="submit">Confirmer</button>
  </div>
  {{ form_end(formAddFormateur) }}

</dialog>

{% endblock %}

{% block javascriptsBottom %}
<script src="{{asset('js/modal.js')}}"></script>
{% endblock %}